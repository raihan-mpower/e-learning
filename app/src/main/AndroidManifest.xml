<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mpower.org.elearning_module">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".application.ELearningApp"
        android:allowBackup="true"
        android:logo="@drawable/tb_logo"
        android:configChanges="locale"
        android:hardwareAccelerated="true"
        android:icon="@drawable/tb_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:screenOrientation="portrait"
            android:name=".MainActivity"
            android:configChanges="locale|orientation|keyboardHidden"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.ModuleActivity"
            android:configChanges="locale"
            android:label="@string/title_activity_course"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.ModuleContentActivity"
            android:configChanges="locale"
            android:label="@string/title_activity_course_content"
            android:parentActivityName=".activities.ModuleActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mpower.org.elearning_module.activities.ModuleActivity" />
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.LogInActivity"
            android:configChanges="locale"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateVisible|adjustResize">

        </activity>

        <service android:name=".services.MediaPlayerService" />

        <activity android:screenOrientation="portrait"
            android:name=".activities.UserTypeSelectionActivity" />
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.SignUpActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity android:name=".activities.ForgotPasswordActivity" />
        <activity android:screenOrientation="portrait"
            android:name=".activities.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:launchMode="standard"
            android:name=".activities.ExamActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity android:name=".activities.ExamResultActivity">

        </activity>
    </application>

</manifest>