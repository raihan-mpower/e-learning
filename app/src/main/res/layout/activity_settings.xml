<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:visibility="visible"
            android:padding="20dp"
            android:background="@drawable/ans_image"
            android:id="@+id/linear_header"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <FrameLayout
                android:layout_gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/frameLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/pro_image"/>
            </FrameLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:id="@+id/layout_details"
                android:layout_toRightOf="@+id/frameLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                >

                <TextView
                    android:textColor="@color/white_background"
                    android:id="@+id/tvName"
                    android:text="Jon Doe"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp" />

                <TextView
                    android:textColor="@color/white_background"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/tvPhone"
                    android:text="01234567891"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/frameLayout"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:visibility="gone"
                    android:textSize="15sp"
                    android:id="@+id/tvGps"
                    android:text="GPS: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:visibility="gone"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15sp"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAddress" />


            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_margin="5dp"
            android:padding="5dp"
            android:layout_below="@+id/linear_header"
            android:id="@+id/module_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </FrameLayout>
        <RelativeLayout
            android:visibility="gone"
            android:layout_below="@id/linear_header"
            android:layout_width="match_parent"
            android:background="#e6e6e6"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/app_bar_main">
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight=".5"
                        android:background="@color/white_background"
                        android:id="@+id/lin_layout"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <Button
                            android:layout_gravity="center"
                            android:layout_alignParentTop="true"
                            android:layout_margin="20dp"
                            android:background="@drawable/icon1"
                            android:id="@+id/e_learn_btn"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            />
                        <TextView
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:text="Tubercolusis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <View
                            android:background="#e6e6e6"
                            android:layout_width="match_parent"
                            android:layout_height="7dp"
                            />
                        <Button
                            android:layout_gravity="center"
                            android:layout_margin="20dp"
                            android:background="@drawable/icon3"
                            android:id="@+id/buttonLandDetail"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/newform"
                            />
                        <TextView
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:text="Infection Control"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <View
                            android:background="#e6e6e6"
                            android:layout_width="match_parent"
                            android:layout_height="7dp"
                            />
                        <Button
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:layout_margin="20dp"
                            android:background="@color/white_background"
                            android:id="@+id/deleteform"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/sendform"
                            />
                        <TextView
                            android:visibility="gone"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <View
                        android:layout_width="7dp"
                        android:layout_height="match_parent"
                        />
                    <LinearLayout
                        android:layout_weight=".5"
                        android:background="@color/white_background"
                        android:divider="@drawable/divider_horizontal"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <Button
                            android:layout_gravity="center"
                            android:shadowColor="#c1c1c1"
                            android:layout_margin="20dp"
                            android:layout_alignParentRight="true"
                            android:id="@+id/buttonCropDetail"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/icon2"/>
                        <TextView
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:text="Diagnostics"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <View
                            android:background="#e6e6e6"
                            android:layout_width="match_parent"
                            android:layout_height="7dp"
                            />
                        <Button
                            android:layout_gravity="center"
                            android:layout_margin="20dp"
                            android:background="@drawable/icon4"
                            android:id="@+id/buttonAddMe"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_below="@+id/reviewform"
                            android:layout_alignParentRight="true"
                            />
                        <TextView
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:text="Treatment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <View
                            android:background="#e6e6e6"
                            android:layout_width="match_parent"
                            android:layout_height="7dp"
                            />
                        <Button
                            android:layout_margin="20dp"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:id="@+id/table"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:visibility="gone"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:text="Data Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>


</ScrollView>
