<?xml version="1.0" encoding="utf-8"?>
<mpower.org.elearning_module.view.SquareCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="9dp"
    app:cardElevation="10dp"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tube_1"
            android:scaleType="centerCrop"
            android:id="@+id/icon" />

        <ImageView
            android:layout_margin="5dp"
            android:visibility="visible"
            android:layout_gravity="end"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/lock"
            android:scaleType="fitXY"
            android:id="@+id/image_view_status_2" />

        <TextView
            android:padding="10dp"
            android:labelFor="@id/icon"
            android:layout_gravity="bottom|center"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />
    </FrameLayout>
</mpower.org.elearning_module.view.SquareCardView>
