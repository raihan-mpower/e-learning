<?xml version="1.0" encoding="utf-8"?>
<mpower.org.elearning_module.view.SquareGrid xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="#f2f2f2"
    android:layout_margin="20dp"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/tube_1"
            android:scaleType="fitXY"
            android:id="@+id/icon" />

        <ImageView
            android:layout_margin="5dp"
            android:visibility="visible"
            android:layout_gravity="end"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/lock"
            android:scaleType="fitXY"
            android:id="@+id/image_view_status_2" />

        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:padding="10dp"
            android:labelFor="@id/icon"
            android:layout_gravity="bottom|center"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/colorPrimaryDark" />
    </FrameLayout>

</mpower.org.elearning_module.view.SquareGrid>